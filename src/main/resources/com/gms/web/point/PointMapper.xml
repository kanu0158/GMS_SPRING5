<mapper namespace="com.gms.web.point.PointMapper">
<update id="update">
	UPDATE POINT
	SET ALL_POINT = ALL_POINT - 30, MBR_POINT = MBR_POINT + 30
	WHERE USERID LIKE #{userId} 
</update>
